<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textTitlePlanned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7sp"
            android:gravity="center_horizontal"
            android:text="@string/Title"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:gravity="center_horizontal"
            android:text="@string/descrition"
            android:layout_marginBottom="4sp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/starTimePlanned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/PubTime" />

        <TextView
            android:id="@+id/endTimePlanned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:gravity="center_horizontal"
            android:text="@string/PubTime"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/LocationPlanned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:gravity="center_horizontal"
            android:text="@string/Location"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <fragment
        android:id="@+id/fragment_map_panned"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/LocationPlanned" />

</LinearLayout>
